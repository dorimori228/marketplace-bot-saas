{
  "manifest_version": 3,
  "name": "Facebook Marketplace Automation",
  "description": "Automate your Facebook Marketplace listings with AI-powered variations and batch operations",
  "version": "1.0.0",
  "author": "PandaBay",

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Facebook Marketplace Automation"
  },

  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "https://*.facebook.com/*",
    "https://marketplace.facebook.com/*",
    "https://web-production-cc17c.up.railway.app/*",
    "http://localhost:5000/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content-scripts/facebook-injector.js"],
      "run_at": "document_idle"
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https://web-production-cc17c.up.railway.app data:"
  }
}
